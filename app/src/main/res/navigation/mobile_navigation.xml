<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.natour21.Fragments.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_inserimentoItinerario"
            app:destination="@id/inserimentoItinerario" />
        <action
            android:id="@+id/action_navigation_home_to_postDetailsFragment"
            app:destination="@id/postDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.natour21.Fragments.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.natour21.Fragments.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/inserimentoItinerario"
        android:name="com.example.natour21.Fragments.inserimentoItinerario"
        android:label="Inserisci itinerario"
        tools:layout="@layout/fragment_inserimento_itinerario" >
        <action
            android:id="@+id/action_inserimentoItinerario_to_navigation_home"
            app:destination="@id/navigation_home" />
        <action
            android:id="@+id/action_inserimentoItinerario_to_mapsFragment2"
            app:destination="@id/mapsFragment2" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment2"
        android:name="com.example.natour21.ui.fragments.mapsFragment"
        android:label="mapsFragment" />
    <fragment
        android:id="@+id/postDetailsFragment"
        android:name="com.example.natour21.Fragments.postDetailsFragment"
        android:label="fragment_post_details"
        tools:layout="@layout/fragment_post_details" >
        <action
            android:id="@+id/action_postDetailsFragment_to_insertReviewFragment"
            app:destination="@id/insertReviewFragment" />
        <action
            android:id="@+id/action_postDetailsFragment_to_reportFragment"
            app:destination="@id/reportFragment" />
    </fragment>
    <fragment
        android:id="@+id/insertReviewFragment"
        android:name="com.example.natour21.Fragments.insertReviewFragment"
        android:label="fragment_insert_review"
        tools:layout="@layout/fragment_insert_review" />
    <fragment
        android:id="@+id/reportFragment"
        android:name="com.example.natour21.Fragments.ReportFragment"
        android:label="fragment_report"
        tools:layout="@layout/fragment_report" />
</navigation>