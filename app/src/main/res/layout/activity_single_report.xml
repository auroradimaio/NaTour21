<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".Activity.SingleReport">
	
	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fillViewport="true">
		
		<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">
		
		
		
		<Button
			android:background="@drawable/btn_general"
			android:text="INVIA RISPOSTA"
			android:textColor="@color/white"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/btnSendResponse"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginBottom="32dp"
			android:layout_marginEnd="16dp"
			android:layout_marginStart="16dp"/>
	
	<TextView
			android:text="Titolo Segnalazione"
			android:layout_width="0dp"
			android:textSize="23dp"
			android:textColor="@color/green"
			android:textStyle="bold"
			android:layout_height="wrap_content"
			android:id="@+id/titleReport"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginEnd="16dp"
			android:layout_marginStart="16dp"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="32dp"/>
			
			<TextView
					android:text="Descrizione Segnalazione"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:textSize="17sp"
					android:id="@+id/descriptionReport"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					android:layout_marginEnd="16dp"
					android:layout_marginStart="16dp"
					app:layout_constraintHorizontal_bias="1.0"
					app:layout_constraintTop_toBottomOf="@+id/senderReport"
					android:layout_marginTop="16dp"/>
			
			<TextView
					android:text="Nome utente"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:textSize="20sp"
					android:textColor="@color/black"
					android:textStyle="bold"
					android:id="@+id/senderReport"
					app:layout_constraintTop_toBottomOf="@+id/titleReport"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					android:layout_marginTop="32dp"
					android:layout_marginEnd="16dp"
					android:layout_marginStart="16dp"/>
			
			<TextView
					android:text="Nome utente"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:textSize="20sp"
					android:textColor="@color/black"
					android:textStyle="bold"
					android:id="@+id/responseUsername"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					android:layout_marginEnd="16dp"
					android:layout_marginStart="16dp"
					app:layout_constraintHorizontal_bias="1.0"
					app:layout_constraintTop_toBottomOf="@+id/descriptionReport"
					android:layout_marginTop="32dp"/>
			
			<TextView
					android:text="Risposta segnalazione"
					android:textSize="17sp"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:id="@+id/responseReport"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					android:layout_marginEnd="16dp"
					android:layout_marginStart="16dp"
					app:layout_constraintHorizontal_bias="1.0"
					app:layout_constraintTop_toBottomOf="@+id/responseUsername"
					android:layout_marginTop="16dp"/>
			
			<EditText
			android:id="@+id/message_report_response"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:autofillHints="none"
			android:background="@drawable/edit_text"
			android:gravity="center_horizontal|center_vertical"
			android:hint="Scrivi un messaggio..."
			android:padding="15dp"
			android:layout_weight="1"
			android:inputType="textCapSentences|textMultiLine"
			android:maxLines="4"
			android:maxLength="2000"
			android:scrollHorizontally="false"
			android:textColor="#000000"
			android:textColorHint="#5A5A5A"
			android:textSize="20sp"
			app:layout_constraintBottom_toTopOf="@+id/btnSendResponse"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginBottom="32dp"
			android:layout_marginEnd="16dp"
			android:layout_marginStart="16dp"/>
			
		</androidx.constraintlayout.widget.ConstraintLayout>
	
	</ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>