<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
                                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                                    xmlns:tools="http://schemas.android.com/tools"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    tools:context=".Activity.RegistrationServiceHandler">
	
	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fillViewport="true">
		
		<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">
			
	<EditText
			android:id="@+id/username_new_message"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:autofillHints="none"
			android:background="@drawable/edit_text"
			android:gravity="center_horizontal|center_vertical"
			android:hint="Nome utente"
			android:padding="15dp"
			android:textColor="#000000"
			android:textColorHint="#5A5A5A"
			android:textSize="20sp"
			app:layout_constraintBottom_toTopOf="@+id/message_new_message"
			app:layout_constraintEnd_toEndOf="@+id/message_new_message"
			android:layout_marginBottom="32dp"
			app:layout_constraintStart_toStartOf="@+id/message_new_message"/>
	
	<EditText
			android:id="@+id/message_new_message"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="32dp"
			android:layout_marginEnd="32dp"
			android:autofillHints="none"
			android:background="@drawable/edit_text"
			android:gravity="center_horizontal|center_vertical"
			android:hint="Scrivi un messaggio..."
			android:padding="15dp"
			android:layout_weight ="1"
			android:inputType="textCapSentences|textMultiLine"
			android:maxLines ="4"
			android:maxLength ="2000"
			android:scrollHorizontally="false"
			android:textColor="#000000"
			android:textColorHint="#5A5A5A"
			android:textSize="20sp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			/>
	
	<Button
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:textAlignment="center"
			android:textColor="@color/white"
			android:background="@drawable/btn_general"
			android:text="INVIA"
			app:layout_constraintTop_toBottomOf="@+id/message_new_message"
			android:layout_marginTop="32dp"
			android:id="@+id/btnSendNewMessage"
			app:layout_constraintEnd_toEndOf="@+id/message_new_message"
			app:layout_constraintStart_toStartOf="@+id/message_new_message">
	</Button>
		
		</androidx.constraintlayout.widget.ConstraintLayout>
	</ScrollView>
	
</androidx.constraintlayout.widget.ConstraintLayout>